<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/lightgray"
    >


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/picturelist_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/picture_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/picturelist_fragment_header"
        android:layout_width="@dimen/span_1"
        android:layout_height="@dimen/span_1"
        android:src="@drawable/ic_received_24"
        android:scaleType="center"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>