<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/divider_height"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <me.jiho.butterfly.view.BaseFontTextView
            android:id="@+id/pictureview_tv_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2"
            android:textColor="@color/black_87"
            android:text="@string/label_untitled"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/span_1"
            />

        <RelativeLayout
            android:id="@+id/pictureview_tb_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <!--
        <me.jiho.animatedtogglebutton.MenuAnimatedToggleButton
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="18dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:id="@+id/picturelist_tb_menu"
            android:layout_width="@dimen/span_1"
            android:layout_height="@dimen/span_1"
            />-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <me.jiho.butterfly.view.PictureListImageView
            android:id="@+id/picturelist_main_image"
            android:background="@color/black_12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <me.jiho.butterfly.view.BaseFontButton
            android:id="@+id/picturelist_btn_show_image"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/picturelist_main_image"
            android:layout_alignBottom="@+id/picturelist_main_image"
            android:visibility="gone"
            android:background="@color/black_26"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="@string/label_show_full_image"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>
    <include layout="@layout/pictureview_footer"/>



</LinearLayout>