<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pictureview_rl_footer"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:id="@+id/pictureview_ll_country_button_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"

        >
        <co.bttrfly.view.BaseFontTextView
            android:id="@+id/pictureview_label_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/label_from"
            android:textColor="@color/black_54"
            android:layout_marginLeft="@dimen/margin_2"

            />
        <co.bttrfly.view.BaseFontButton
            android:id="@+id/pictureview_btn_country_name"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:layout_margin="0dp"
            android:textAllCaps="false"
            android:text="Jiho Hong"
            android:textColor="@color/black_87"
            android:layout_gravity="center_vertical"

            />
    </LinearLayout>
    <co.bttrfly.view.SendCountButton
        android:id="@+id/pictureview_btn_send_count"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/span_1"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_centerVertical="true"
        android:textColor="@color/black_87"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:drawableLeft="@drawable/ic_sent_18"
        />


    <co.bttrfly.view.PictureLikeButton
        style="?android:borderlessButtonStyle"
        android:id="@+id/pictureview_btn_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/heart_active_18"
        android:text="0 "
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:textColor="@color/black_87"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>