<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="me.jiho.butterfly.auth.AuthActivity$PlaceholderFragment">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">



        <LinearLayout
            android:id="@+id/auth_ll_login_buttons"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/auth_iv_logo"
                android:layout_width="@dimen/logo_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo"
                android:layout_margin="@dimen/margin_2"
                />


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <me.jiho.butterfly.view.CustomFacebookLoginButton
                    xmlns:fb="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/auth_btn_facebook_login"
                    style="?android:borderlessButtonStyle"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/span_1"
                    android:layout_height="@dimen/span_1"
                    fb:login_text="@string/fa_facebook"
                    fb:logout_text="@string/fa_facebook"


                    />

                <me.jiho.butterfly.view.FontAwesomeButton
                    style="?android:borderlessButtonStyle"
                    android:text="@string/fa_google_plus"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/span_1"
                    android:layout_height="@dimen/span_1"
                    android:visibility="gone"/>

                <me.jiho.butterfly.view.FontAwesomeButton
                    android:id="@+id/auth_btn_email_login"
                    style="?android:borderlessButtonStyle"
                    android:text="@string/fa_envelope_o"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/span_1"
                    android:layout_height="@dimen/span_1" />


            </LinearLayout>
            <me.jiho.butterfly.view.ThemeFontButton
                android:id="@+id/auth_btn_sign_up"

                android:layout_gravity="center_horizontal"
                android:text="@string/label_sign_up_with_email"
                android:textColor="@android:color/black"
                android:alpha=".54"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="?android:borderlessButtonStyle" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/auth_ll_login_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <me.jiho.butterfly.view.ThemeFontTextView
                android:drawableTop="@drawable/ic_sent_48"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/label_sign_in"
                android:layout_margin="@dimen/margin_2"
                />
            <me.jiho.butterfly.view.BaseFontEditText
                android:id="@+id/auth_et_email"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="@dimen/span_6"
                android:layout_height="@dimen/span_1"
                android:background="@null"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                />
            <me.jiho.butterfly.view.BaseFontEditText
                android:id="@+id/auth_et_password"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="@dimen/span_6"
                android:layout_height="@dimen/span_1"
                android:background="@null"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:singleLine="true"
                />

            <ImageButton
                android:id="@+id/auth_btn_submit"
                style="?android:borderlessButtonStyle"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="@dimen/span_1"
                android:layout_height="@dimen/span_1"
                android:src="@drawable/ic_done_black_24dp"
                />
            <ImageButton
                android:id="@+id/auth_btn_cancel"
                style="?android:borderlessButtonStyle"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="@dimen/span_1"
                android:layout_height="@dimen/span_1"
                android:src="@drawable/ic_arrow_back_grey600_24dp"
                />



        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
